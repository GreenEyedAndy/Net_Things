<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:my="clr-namespace:SharedUI_Lib">
    
    <Style TargetType="Button">
        <Style.Resources>
            <ResourceDictionary Source="/SharedUI_Lib;component/Colors/Colors.xaml"/>
        </Style.Resources>
        <Setter Property="Background" Value="{StaticResource HeaderBackground}"/>
        <Setter Property="Margin" Value="8,8,0,0"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="Background" Value="#FF204E7E"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="10,4,10,4"/>
    </Style>

</ResourceDictionary>